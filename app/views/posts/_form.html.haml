    <haml_silent>
    </haml_silent>    </div>
    </div>
  .form-group
    = f.label :category_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.collection_select(:category_id, Category.all, :id, :title, { prompt: true }, { class: "selectpicker"})
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: "btn btn-primary"
