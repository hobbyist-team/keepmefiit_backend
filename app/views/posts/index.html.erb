<!-- <div class="container" style="margin-top:15px"> -->
  <div class="row" style="margin-top:15px;">
    <div class="col-md-2" style="background-color:none;margin-bottom:25px">
      <div class="row" >
        <div class="col-md-12" style="padding:3px 0 8px 0px;text-align:center;background-color:none"> <!-- #d3d3d3 --> 
          <%= image_tag("avatar-13.png", size: "80x80") %>
          <p class="post-info"><b>Raj Gurung</b> <br> 
            Founder of keepmefiit <br>
            Wt: 115kg | Ht: 5'10"
          </p>          
        </div>        
      </div>
    </div>

    <div class="col-md-8">
      <% @posts.each do |post| %>
        <section>
          <div class="row" style="background-color:none;"> <!-- 01. Top div -->           
            <div class="col-xs-12" style="background-color:#f5f5f5;padding:10px 10px;border-radius:0px;">  
              <div  class="display_inline_block" style="background-color:none">
                <!-- <h3> <%#= link_to post[:title], post_path(post[:id]) %> </h3>         -->
                <div>  
                  <div class="float_left"> <%= image_tag("avatar.jpeg", class: "img-circle", size: "50x50") %> </div>
                  <div class="float_left"> 
                    <div class="post_by"><%= post[:email] %> </div>
                    <div class="post_by"><%= time_ago_in_words(post[:created_at]) %> </div>
                  </div>
                </div> 
                <div class="post_content">
                  <p style="font-size:14px"> <%= post[:content] %> </p>
                </div> 
                <div>
                  <span>
                    <%= image_tag("green-heart.png", class: "img-circle", size: "20x20") %> 
                    <span class="complementary">1 k</span> 
                  </span> 

                  <span class="twelve_left_margin">
                    <%= image_tag("blue-pulse.png", class: "img-circle", size: "30x20") %> 
                    <span class="complementary">7 k</span> 
                  </span> 
                </div>
              </div>
            </div>  
          </div> <!-- 01. End div -->              
        </section>
      <% end %>  
    </div> 

    <div class="col-md-2">
      <div class="col-md-12 wrapper_colour" style="border-radius:0px;">
        Ads
      </div>
    </div> 
  </div>
<!-- </div> -->


