<div class="page-header">
  <%= link_to new_workout_category_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Workout category
  <% end %>
  <h1>Listing workout_categories</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @workout_categories) do |workout_category| %>
            <td><%= workout_category.name %></td>
            <td><%= workout_category.description %></td>
            <td><%= link_to 'Show', workout_category %></td>
        <td><%= link_to 'Edit', edit_workout_category_path(workout_category) %></td>
        <td><%= link_to 'Destroy', workout_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
